{
  "title": "Expressions: CASE",
  "description": "Choose the first matching branch with CASE/WHEN/ELSE using concise derived values.",
  "program": [
    "LET failed = input.totals.failures + input.totals.errors",
    "",
    "OUTPUT {",
    "    status: CASE {",
    "        WHEN input.totals.tests == 0 THEN \"error\"",
    "        WHEN failed == 0 THEN \"passing\"",
    "        ELSE \"failing\"",
    "    },",
    "    failed: failed",
    "}"
  ],
  "input": {
    "totals": {
      "tests": 12,
      "failures": 0,
      "errors": 0
    }
  }
}
